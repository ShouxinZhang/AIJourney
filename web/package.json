{
  "name": "ai-journey",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "check": "bash ../scripts/check_errors.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "knowledge:bootstrap": "node ./tools/knowledge-sync/scripts/bootstrap-read-model-from-legacy-tree.mjs",
    "knowledge:export-md": "node ./tools/knowledge-sync/scripts/export-leaf-markdown.mjs",
    "knowledge:sync-md-to-db": "node ./tools/knowledge-sync/scripts/sync-markdown-to-postgres.mjs",
    "knowledge:import-db": "node ./tools/knowledge-sync/scripts/import-read-model-to-postgres.mjs",
    "knowledge:sync": "node ./tools/knowledge-sync/scripts/sync-read-model.mjs",
    "knowledge:publish-read": "npm run knowledge:sync-md-to-db && npm run knowledge:sync",
    "knowledge:node": "node ./tools/knowledge-sync/scripts/crud-node.mjs",
    "knowledge:doc": "node ./tools/knowledge-sync/scripts/crud-doc.mjs",
    "repo:scan": "node ../scripts/repo-metadata/scripts/scan.mjs",
    "repo:scan-update": "node ../scripts/repo-metadata/scripts/scan.mjs --update",
    "repo:crud": "node ../scripts/repo-metadata/scripts/crud.mjs",
    "repo:generate-md": "node ../scripts/repo-metadata/scripts/generate-structure-md.mjs",
    "repo:sync-to-db": "node ../scripts/repo-metadata/scripts/sync-json-to-postgres.mjs",
    "repo:sync-from-db": "node ../scripts/repo-metadata/scripts/sync-to-json.mjs"
  },
  "dependencies": {
    "@xyflow/react": "^12.8.2",
    "pg": "^8.18.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/vite": "^4.1.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^5.1.3",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
